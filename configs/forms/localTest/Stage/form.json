{
  "name": "localTestStage",
  "account": "test",
  "data$url": "http://localhost/exchange/index.php/",
  "interval": 1000,
  "inputs": {
    "user:name:full": {
      "title": "Agent",
      "label": "Agent",
      "type": "text",
      "disabled": true
    },
    "name:first": {
      "label": "First name",
      "title": "Customer first name",
      "type": "text",
      "disabled": true
    },
    "name:last": {
      "label": "Last name",
      "title": "Customer last name",
      "type": "text",
      "disabled": true
    },
    "address": {
      "type": "hidden"
    },
    "email": {
      "label": "Email",
      "title": "Customer Email",
      "type": "email",
      "disabled": true
    },
    "phone": {
      "label": "Phone",
      "title": "Customer Phone",
      "type": "tel",
      "disabled": true
    },
    "cc:number": {
      "title": "Credit Card number",
      "label": "CC Number",
      "type": "number",
      "disabled": true,
      "size": 16
    },  
    "cc:expire:month": {
      "title": "Credit Card Expire Month",
      "label": "CC Month",
      "type": "number",
      "disabled": true,
      "size": 2
    },  
    "cc:expire:year": {
      "title": "Credit Card Expire Year",
      "label": "CC Year",
      "type": "number",
      "disabled": true,
      "size": 4
    },
    "cc:cvv": {
      "title": "Credit Card CVV",
      "label": "CVV",
      "type": "text",
      "disabled": true,
      "size": 3
    },
    "id": {
      "type": "text",
      "disabled": true,
      "label": "CRM Id",
      "title": "CRM Id",
      "size": 3
    },    
    "amount": {
      "label": "Sum",
      "title": "Sum",
      "type": "number",
      "size": 4,
      "step": 0.01
    },
    "currency": {
      "label": "Currency",
      "title": "Currency",
      "type": "text",
      "value": "GBP",
      "size": 3,
      "disabled": true
    },    
    "account": {
      "label": "PSP",
      "type": "list",
      "validate": "required",
      "items": [
        {"value": "", "label": ""},
        {"value": "kaspit", "label": "Kaspit"},
        {"value": "isracard", "label": "Isracard"},
        {"value": "sabadel", "label": "Sabadel"},        
        {"value": "payfinder", "label": "Payfinder"}
      ]      
    },
    "reject": {
      "label": "Reject",
      "type": "submit",
      "action": "http://localhost/exchange/index.php/teststagebank/",
      "method": "PATCH",
      "data": {
        "transaction:receipt": "0000000"
      }
    },   
    "transaction:receipt": {
      "title": "Confirmation number",
      "label": "Confirmation number",
      "type": "number",
      "placeholder": "xxxxxxx",
      "size": 7,
      "validate": "required"
    },
    "approve": {
      "label": "Approve",
      "type": "submit",
      "action": "http://localhost/exchange/index.php/teststagebank/",
      "method": "PATCH"
    }
  }
}