{
  "name": "immigration",
  "action": "https://payment.gobemark.info/php/psps/",
  "method": "POST",
  "subscribeUrl": "https://payment.gobemark.info/php/psps/await/",
  "saveUrl": "https://payment.gobemark.info/php/psps/exchange/",
  "inputs": {
    "title": {
      "label": "Payment form"
    },
    "entityId": {
      "label": "Entity Id",
      "type": "number",
      "required": true    
    },
    "name:first": {
      "label": "First name",
      "type": "text",
      "required": true
    },
    "name:last": {
      "label": "Last name",
      "type": "text",
      "required": true
    },
    "address": {
      "label": "Address",
      "type": "textarea",
      "required": true
    },
    "email": {
      "label": "Email",
      "type": "email",
      "required": true
    },
    "phone": {
      "label": "Phone",
      "type": "tel",
      "required": true
    },
    "cc": {
      "label": "Credit Card"
    },
    "cc:number": {
      "label": "Number",
      "type": "text",
      "required": true
    },  
    "cc:expire:month": {
      "label": "Expire month",
      "type": "month",
      "required": true
    },  
    "cc:expire:year": {
      "label": "Expire year",
      "type": "year",
      "required": true
    },
    "cc:cvv": {
      "label": "CVV2",
      "type": "number",
      "required": true
    },
    "deal": {
      "label": "Deal"
    },
    "id": {
      "label": "Deal Id",
      "type": "text"
    },
    "description": {
      "label": "Products",
      "type": "textarea",
      "rows": 4,
      "required": true
    },
    "amount": {
      "label": "Sum",
      "type": "number",
      "required": true,
      "step": 0.01
    },
    "currency": {
      "label": "Currency",
      "type": "list",
      "items": [
        {"value": "GBP"}
      ],
      "required": true
    },
    "account": {
      "type": "hidden",
      "value": "immigration"
    },    
    "process": {
      "label": "Processor",
      "type": "list",
      "items": [
        {"value": "Tranzila_instant_charge", "label": "Instant charge"},
        {"value": "Isracard_3d_secure", "label": "3d secure Isracard "},
        {"value": "Netpay_3d_secure", "label": "3d secure Netpay"}
      ]
    },
    "save": {
      "label": "Save",
      "type": "button"
    },
    "submit": {
      "label": "Process",
      "type": "submit"
    }
  }
}