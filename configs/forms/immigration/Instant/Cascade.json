{
  "name": "immigration/Instant/Cascade",
  "account": "immigration",
  "data$url": "https://payment.gobemark.info/php/exchange/v0.0.2/index.php/",
  "interval": 1000,
  "inputs": {
    "title": {
      "label": "Payment form - Cascade"
    },
    "entityId": {
      "label": "Entity ID",
      "type": "hidden",
      "disabled": true
    },
    "user:name:full": {
      "label": "Agent name",
      "type": "hidden",
      "disabled": true
    },
    "user:email": {
      "label": "Agent email",
      "type": "hidden",
      "disabled": true
    },
    "user:id": {
      "label": "Agent ID",
      "type": "hidden",
      "disabled": true
    },
    "name:first": {
      "label": "First name",
      "type": "text",
      "disabled": true
    },
    "name:last": {
      "label": "Last name",
      "type": "text",
      "disabled": true
    },
    "address": {
      "label": "Address",
      "type": "textarea"
    },
    "email": {
      "label": "Email",
      "type": "email",
      "disabled": true
    },
    "phone": {
      "label": "Phone",
      "type": "tel",
      "disabled": true
    },
    "cc": {
      "label": "Credit Card"
    },
    "cc:number": {
      "label": "Number",
      "type": "number",
      "validate": "luhn",
      "autocomplete": "new-password"
    },  
    "cc:expire:month": {
      "label": "Expire month",
      "type": "month",
      "validate": "required",
      "autocomplete": "new-password"
    },  
    "cc:expire:year": {
      "label": "Expire year",
      "type": "year",
      "validate": "required",
      "autocomplete": "new-password"
    },
    "cc:cvv": {
      "label": "CVV2",
      "type": "number",
      "validate": "required",
      "autocomplete": "new-password"
    },
    "deal": {
      "label": "Deal"
    },
    "id": {
      "label": "Deal Id",
      "type": "hidden",
      "validate": "required",
      "disabled": true
    },
    "description": {
      "label": "Products",
      "type": "textarea",
      "rows": 4,
      "validate": "required",
      "disabled": true
    },
    "amount": {
      "label": "Sum",
      "type": "number",
      "step": 0.01,
      "validate": "required",
      "disabled": true
    },
    "company": {
      "type": "hidden",
      "disabled": true
    },    
    "currency": {
      "type": "list",
      "label": "Currency",
      "disabled": true,
      "items": [
        {"value": "GBP"}
      ]
    },
    "account": {
      "value": "immigration",
      "type": "hidden",
      "disabled": true
    },
    "share": {
      "label": "Send to stage",
      "type": "submit",
      "action": "https://payment.gobemark.info/php/exchange/v0.0.2/index.php/stagebank/",
      "method": "PATCH",
      "alert": true
    },
    "pay": {
      "label": "Pay",
      "type": "submit",
      "action": "https://payment.gobemark.info/php/psps/v1.0.3/",
      "method": "POST",
      "data": {
        "process": "cascade",
        "account": "immigration",
        "currency": "USD",
        "fee": 0.5        
      }
    }
  }
}